<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.2"
    xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                        https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">
    
    <persistence-unit name="DogosObregonPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades del proyecto -->
        <class>Entities.Cliente</class>
        <class>Entities.Hotdog</class>
        <class>Entities.Pedido</class>
        <class>Entities.PedidoDetalle</class>

        <properties>
            <!-- ConexiÃ³n a MySQL 8 con caracteres especiales escapados -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/DogosObregon?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="saiditson"/>

            <!-- Dialecto compatible con MySQL 8 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <!-- Deshabilitar cache de segundo nivel -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>

            <!-- Mostrar SQL en consola -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Actualiza esquema sin borrar tablas -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
